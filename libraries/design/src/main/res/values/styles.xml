<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>

        <item name="colorControlNormal">@color/lightGrey</item>
        <item name="colorControlActivated">@color/grey</item>
        <item name="colorControlHighlight">@color/grey</item>
    </style>

    <!-- Text Generic -->
    <style name="AppTheme.TextRegular" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/din_pro_regular</item>
        <item name="android:fontFamily">@font/din_pro_regular</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.TextLight" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/din_pro_light</item>
        <item name="android:fontFamily">@font/din_pro_light</item>
        <item name="android:textAlignment">center</item>
    </style>
    
    <style name="AppTheme.TextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/din_pro_medium</item>
        <item name="android:fontFamily">@font/din_pro_medium</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/mediumGrey</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="AppTheme.TextBold" parent="TextAppearance.AppCompat.Large">
        <item name="fontFamily">@font/din_pro_bold</item>
        <item name="android:fontFamily">@font/din_pro_bold</item>
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Text Coloring -->
    <style name="AppTheme.TextMedium.Inverse" parent="AppTheme.TextMedium">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.TextMedium.Contrast" parent="AppTheme.TextMedium">
        <item name="android:textColor">@color/darkGrey</item>
    </style>

    <style name="AppTheme.TextRegular.Light" parent="AppTheme.TextRegular">
        <item name="android:textColor">@color/grey</item>
    </style>

    <!-- Text Specific -->
    <style name="AppTheme.TextMedium.Contrast.InputText" parent="AppTheme.TextMedium.Contrast">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="AppTheme.TextMedium.Link" parent="AppTheme.TextMedium">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextBold.Headline" parent="AppTheme.TextBold">
        <item name="android:textSize">24sp</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="BottomNavigation" />
    <style name="BottomNavigation.Text" parent="AppTheme.TextMedium.Inverse">
        <item name="android:textAlignment">center</item>
    </style>

    <!-- Button -->
    <style name="AppTheme.Button" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:textAppearance">@style/AppTheme.TextMedium.Inverse</item>
        <item name="android:textAlignment">center</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:foreground">@null</item>
    </style>

    <!-- Text Input -->
    <style name="AppTheme.InputText">
        <item name="android:textAppearance">@style/AppTheme.TextMedium.Contrast.InputText</item>
        <item name="android:background">@drawable/input_text_selector</item>
    </style>
</resources>
