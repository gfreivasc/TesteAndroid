<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Text -->
    <style name="TextRegular" parent="TextAppearance.AppCompat.Body1">
        <item name="fontFamily">@font/din_pro_regular</item>
    </style>

    <style name="TextLight" parent="TextAppearance.AppCompat.Small">
        <item name="fontFamily">@font/din_pro_light</item>
    </style>
    
    <style name="TextMedium" parent="TextAppearance.AppCompat.Medium">
        <item name="fontFamily">@font/din_pro_medium</item>
    </style>

    <!-- Bottom Navigation -->
    <style name="BottomNavigation" />
    <style name="BottomNavigation.Text" parent="TextMedium">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
    </style>
</resources>
